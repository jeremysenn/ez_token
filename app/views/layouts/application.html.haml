!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title EZcash
    = favicon_link_tag asset_path('favicon.ico')
    %link{:href => image_path("apple-touch-icon.png"), :rel => "apple-touch-icon", :sizes => "180x180"}/
    %link{:href => image_path("favicon-32x32.png"), :rel => "icon", :sizes => "32x32", :type => "image/png"}/
    %link{:href => image_path("favicon-16x16.png"), :rel => "icon", :sizes => "16x16", :type => "image/png"}/
    %link{:href => image_path("site.webmanifest"), :rel => "manifest"}/
    %link{:href => image_path("safari-pinned-tab.svg"), :rel => "mask-icon"}/
    %meta{:content => "EZcash", :name => "apple-mobile-web-app-title"}/
    %meta{:content => "EZcash", :name => "application-name"}/

    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    %link{:href => "https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic", :rel => "stylesheet"}/
    / Tell the browser to be responsive to screen width
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
    / Font Awesome
    %link{:href => "/assets/bower_components/font-awesome/css/font-awesome.min.css", :rel => "stylesheet"}/
    / Ionicons
    %link{:href => "/assets/bower_components/Ionicons/css/ionicons.min.css", :rel => "stylesheet"}/

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.hold-transition{class: "#{user_signed_in? ? 'layout-top-nav' : 'login-page' }"}
    .wrapper
      - unless user_signed_in?
        - unless (params[:controller] == "customers" and params[:action] == "qr_code")
          = render 'shared/no_user_navbar'
      - else
        =# fine_print.contracts_url
        -# unless current_page?(fine_print.contracts_url) or current_page?('/fine_print/contracts')
        - unless controller.controller_name == 'contracts' or controller.controller_name == 'signatures'
          - if current_user.administrator? or current_user.collaborator?
            - unless ((params[:controller] == "customers" and (params[:action] == "barcode" or params[:action] == "qr_code")) or (params[:controller] == "transactions" and params[:action] == "quick_pay"))
              = render 'shared/admin_user_navbar' 
          - elsif current_user.basic?
            = render 'shared/basic_user_navbar' 
        - else
          - if current_user.administrator?
            = render 'shared/admin_user_fine_print_navbar' 
      = yield
      - unless ((params[:controller] == "customers" and (params[:action] == "barcode" or params[:action] == "qr_code")) or (params[:controller] == "transactions" and params[:action] == "quick_pay"))
        %footer.main-footer
          %strong= "Copyright © #{Date.today.year}"
          = link_to "https://www.tranact.com", target: '_blank' do
            = "Transact Payment Systems"
          = "All rights reserved."
          .pull-right
            = link_to "Terms of Service", '/Terms_of_Service_6-21-2019.pdf', target: '_blank;'
            •
            = link_to "Privacy Policy", '#'

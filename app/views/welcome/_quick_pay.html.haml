  $('#one_time_payment_pay_and_print_button').click(function() {
    var payment_amount = $('#amount' ).val();
    if (payment_amount > 0) {
      var url = "#{barcode_customer_url(@barcode_access_string)}";
      window.open(url, '_blank');
      }
    else {
      alert('Please enter amount');
    }
  });
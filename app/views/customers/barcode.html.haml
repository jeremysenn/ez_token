.jumbotron{style: 'background-color: white;'} 
  .text-center
    - unless @customer.full_name.blank? and params[:amount].blank?
      %h1.text-xs-center
        = number_to_currency(params[:amount], precision: 0) unless params[:amount].blank?
        - unless @customer.full_name.blank?
          %br
          = @customer.full_name
      - unless @transaction_id.blank?
        .text-xs-center
          %strong= @transaction_id
      %br
      %br
    %table.table{:style => "height: 100px;", class: 'text-xs-center'}
      %tbody
        %tr
        %tr
        %tr
        %tr
          %td.align-bottom 
            %img{:src => "data:image/png;base64,#{@base64_barcode_string}", id: 'barcode_image', class: 'img-fluid'}

:javascript
  $(document).ready(function () {
    //window.print();
    $("#barcode_image").load(function(){
      window.print();
    });
  });

  
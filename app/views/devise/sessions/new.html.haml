= render 'shared/flash_messages'
.login-box
  .login-logo
    %a{:href => root_path}
      <strong>ez</strong>Token
  .login-box-body
    %p.login-box-msg Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        =# f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', :placeholder => "Email", :type => "email"
        = f.number_field :phone, autofocus: true, autocomplete: "phone", class: 'form-control', :placeholder => "Phone", required: true, step: '1', autofocus: true, :inputmode => "numeric", :min => "0", :pattern => "[0-9]*"
      .form-group
        = f.password_field :password, autocomplete: "off",  class: 'form-control', :placeholder => "Password"
      - if devise_mapping.rememberable?
        .form-group
          .col-xs-8
            .checkbox.icheck
              %label
                = f.check_box :remember_me
                Remember me
      .actions
        = f.submit "Log in", class: 'btn btn-primary btn-block'
    = link_to "Sign up", new_registration_path(resource_name)
    =# render "devise/shared/links"
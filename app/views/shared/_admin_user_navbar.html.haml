    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item{:class => (current_page? root_path) ? "active" : ""} 
        %a.nav-link{:href => root_path}
          %i.fa.fa-dashboard
          Home
      %li.nav-item{:class => params[:controller] == 'customers' ?  "active" : ""}
        %a.nav-link{:href => customers_path}
          %i.fa.fa-male
          Payees
      %li.nav-item{:class => params[:controller] == 'payment_batches' ?  "active" : ""}
        %a.nav-link{:href => payment_batches_path}
          %i.fa.fa-dollar
          Payments
      %li.nav-item{:class => params[:controller] == 'devices' ?  "active" : ""}
        %a.nav-link{:href => devices_path}
          %i.fa.fa-money
          ATMs
      %li.nav-item{:class => params[:controller] == 'transactions' ?  "active" : ""}
        %a.nav-link{:href => transactions_path}
          %i.fa.fa-bolt
          EZcash

                %small.bin_help.form-text.text-muted
          .form-group.row
            - unless @bin_7_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_7_denomination}"
                  = text_field_tag :bin_7, nil, :placeholder => "Bin 7 Notes", class: "bin_field form-control", "data-denomination" => @bin_7_denomination
                %small.bin_help.form-text.text-muted
            - unless @bin_8_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_8_denomination}"
                  = text_field_tag :bin_8, nil, :placeholder => "Bin 8 Notes", class: "bin_field form-control", "data-denomination" => @bin_8_denomination
                %small.bin_help.form-text.text-muted
          .form-group.row
            .col-sm-12
              = check_box_tag :term_totals_reset, nil, false, {class: "term_totals_reset_check_box form_control"}
              Terminal totals have been reset
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel

#reset-coin-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.modal-title
          Reset Coin
      .modal-body
        %strong Term Totals
        %div{class: 'term_totals'}
        %div{class: 'getting_term_totals_spinner', style: 'display:none;'}
          %p
            %i.fa.fa-spinner.fa-spin
            Requesting totals...
        = form_tag reset_coin_device_path(@device), method: 'get', class: 'form-horizontal' do |f|
          .form-group.row
            - unless @bin_1_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_1_denomination}"
                  = text_field_tag :bin_1, nil, :placeholder => "Bin 1 Notes", class: "bin_field form-control", "data-denomination" => @bin_1_denomination
                %small.bin_help.form-text.text-muted
            - unless @bin_2_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_2_denomination}"
                  = text_field_tag :bin_2, nil, :placeholder => "Bin 2 Notes", class: "bin_field form-control", "data-denomination" => @bin_2_denomination
                %small.bin_help.form-text.text-muted
          .form-group.row
            - unless @bin_3_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_3_denomination}"
                  = text_field_tag :bin_3, nil, :placeholder => "Bin 3 Notes", class: "bin_field form-control", "data-denomination" => @bin_3_denomination
                %small.bin_help.form-text.text-muted
            - unless @bin_4_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_4_denomination}"
                  = text_field_tag :bin_4, nil, :placeholder => "Bin 4 Notes", class: "bin_field form-control", "data-denomination" => @bin_4_denomination
                %small.bin_help.form-text.text-muted
          .form-group.row
            - unless @bin_5_denomination.blank?
              .col-sm-6
                .input-group
                  .input-group-prepend
                    %span.input-group-text= "$#{@bin_5_denomination}"
                  = text_field_tag :bin_5, nil, :placeholder => "Bin 5 Notes", class: "bin_field form-control", "data-denomination" => @bin_5_denomination
                %small.bin_help.form-text.text-muted
            - unless @bin_6_denomination.blank?
              .col-sm-6

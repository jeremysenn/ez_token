.content-wrapper
  .container
    / Content Header (Page header)
    %section.content-header
      %h1
        %i.fa.fa-building
        = @company.name
    / Main content
    %section.content
      / Default box
      .box.box-primary
        .box-header.with-border
          %h3.box-title 
            = "Company #{@company.CompanyNumber}"
            %small.text-muted
              Created
              = @company.CreateDate.in_time_zone(current_user.time_zone).strftime("%-m/%-d/%y %l:%M %p")
        .box-body
          %p.lead
            %strong Transaction Account
            %small.text-muted= @company.TxnActID.blank? ? 'None' : @company.TxnActID
            - unless @company.TxnActID.blank?
              %br
              Balance:
              = number_to_currency(@company.transaction_account.present? ? @company.transaction_account.balance : 0)
              %br
              Minimum Balance:
              = number_to_currency(@company.transaction_account.present? ? @company.transaction_account.MinBalance : 0)
          %p.lead
            %strong Fee Account
            %small.text-muted= @company.FeeActID.blank? ? 'None' : @company.FeeActID
            - unless @company.FeeActID.blank?
              %br
              Balance:
              = number_to_currency(@company.fee_account.present? ? @company.fee_account.balance : 0)
          %p.lead
            %strong Can Quick Pay:
            = @company.can_quick_pay? ? 'Yes' : 'No'
          - if @company.can_quick_pay?
            %p.lead
              Quick Pay Wallet Type:
              = @company.quick_pay_account_type.description
        .box-footer
          = link_to 'Edit', edit_company_path(@company), class: 'btn btn-primary'
- model_class = DevStatus
.container
  .panel.panel-primary
    .panel-heading
      %h3.panel-title
        = "DevStatus Details"
    .panel-body
      .row-fluid
        .col-xs-12.col-md-6
          %p
            %strong= "Status:"
            %br
            = @dev_status['status']
          %p
            %strong= "Description:"
            %br
            = StatusDesc.short_description(@dev_status['status'])
.content-wrapper
  .container
    / Content Header (Page header)
    %section.content-header
      = render 'shared/flash_messages'
      %h3 Group
    / Main content
    %section.content
      / Default box
      .box.box-primary
        .box-body
          %p.lead
            %strong Description:
            = @group.description
          %p.lead
            %strong Active:
            = @group.active? ? 'Yes' : 'No'
          %p.lead
            %strong Customers:
            - unless @customers.blank?
              %table.table.table-condensed
                %thead
                  %tr
                    %th{:scope => "col"} ID
                    %th{:scope => "col"} First Name
                    %th{:scope => "col"} Last Name
                    %th{:scope => "col"} Company
                    %th
                %tbody
                  - @customers.each do |customer|
                    %tr
                      %td= customer.id
                      %td= customer.NameF
                      %td= customer.NameL
                      %td= customer.company.blank? ? 'None' : customer.company.CompanyName
                      %td
                        = link_to 'Show', customer, class: 'btn btn-secondary btn-sm'
              = paginate @customers
            - else
              None

          .box-footer
            = link_to 'Back', :back, class: 'btn btn-default'
            = link_to 'Edit', edit_group_path(@group), class: 'btn btn-primary'
            .pull-right
              = link_to 'Delete', @group, :method => :delete, class: 'btn btn-danger btn-sm', :data => { :confirm => 'Are you sure you want to delete?' }
            